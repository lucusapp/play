extends layoutAdmin

block content
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') PlayPadel Admin Panel
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Dashboard
            li
              a(href='#') Settings
            li
              a(href='#') Profile
            li
              a(href='/') Home

    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
            li
              a(href='/admin') Overview
            li
              a(href='#') Reports
            li
              a(href='#') Analytics
            li
              a(href='#') Export
          ul.nav.nav-sidebar
            li.active
              a(href='/admin/users') Users
            li
              a(href='/admin/matchs') Matchs

        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          h1.page-header Dashboard
          .row.placeholders
            .col-xs-6.col-sm-3.placeholder
              h4 Label
              span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
              h4 Label
              span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
              h4 Label
              span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
              h4 Label
              span.text-muted Something else
          h2.sub-header Users
          .table-responsive
            table.table.table-striped
              thead
                tr
                  th #
                  th Name
                  th Second Name
                  th Email
                  th Facebook
                  th Options
                  th 
              tbody
                each user, i in users
                  tr
                    td= i
                    td= users[i].local.name
                    td= users[i].local.lastName
                    td 
                     a(href='/user/' + users[i]._id)= users[i].local.email
                    - if(users[i].facebook)
                      td= users[i].facebook.email
                    - else
                      td Not Fb linked
                    td 
                      a.btn.btn-danger(href='/admin/deleteuser/'+users[i]._id) Delete User
                    td
                      - if(users[i].group != 'admin') 
                        a.btn.btn-warning(href='/admin/makeadmin/'+users[i]._id) Make Admin
                      - else
                        a.btn.btn-primary(href='/admin/notadmin/'+users[i]._id) Unmake Admin
               

